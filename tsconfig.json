{
  "compilerOptions": {
    "target": "es2018",
    "lib": [
      "es2015",
      "dom",
      "webworker",
      "es2018"
    ],
    "module": "CommonJS",
    "composite": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "watch": false,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true,
    "typeRoots": ["node_modules/@types", "node_modules/hardhat/types"]
  },
  "exclude": ["**/node_modules", "**/build", "**/dist"],
  "files": ["hardhat.common.ts", "hardhat.config.ts", "hardhat.typechain.ts"],
  "include": ["test", "deploy", "typechain-types"]
}
